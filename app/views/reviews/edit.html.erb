<h1>Update the review:</h1>

<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.label :review %>
  <%= f.text_area :content_body %>
  <p><%= f.submit %></p>
<% end %>

<p><%= link_to "Delete review", product_review_path(@product, @review),
                        :data => {:confirm => "Are you sure?",
                                        :method => "delete"} %></p>

<p><%= link_to "Go back", product_path(@product) %></p>