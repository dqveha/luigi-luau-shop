<h1> Sign Up</h1>
<%= form_for @user do |f| %>
  <table>
    <tr>
      <td class="sign"><%= f.label "Email" %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td class="sign"><%= f.label "Password" %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td class="sign"><%= f.label "Password confirmation" %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td class="find_me" colspan="2"><%= f.submit "Sign up" %></td>
    </tr>
  </table>
<% end %>

